<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/StaticResources/layer/layer.js"></script>
    <script src="~/layui/jquery.cookie.js"></script>
    <style>
        body {
            background-image: url('/StaticResources/Img/bg2.jpg');
            text-align: center;
            color: aliceblue;
        }

        #s {
            font-size: 23px
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2" id="s" style="background:rgba(0,0,0,0.6)">
                <ul class="nav flex-column">
                    <li class="nav-item" style="margin-top:100px"><img style="width:180px;height:180px;border-radius:50%;opacity:0.8" src="~/StaticResources/Img/admin.png" /></li>

                    <li class="nav-item"><a href="#" class="badge badge-info" id="RoleName">管理员:</a><a href="#" id="NickName" class="badge badge-secondary">Admin</a></li>
                    <li class="nav-item" style="margin-top:20px">
                        <button type="button" class="btn btn-outline-info">个人信息</button>
                    </li>
                    <li class="nav-item" style="margin-top:20px">
                        <button type="button" class="btn btn-outline-success">安全设置</button>
                    </li>
                    <li class="nav-item" style="margin-top:20px">
                        <button type="button" class="btn btn-outline-warning">&nbsp;控制台&nbsp;</button>
                    </li>
                    <li class="nav-item" style="margin-top:20px">
                        <button type="button" class="btn btn-outline-danger">&nbsp;注&nbsp;&nbsp;销&nbsp;</button>
                    </li>
                </ul>

            </div>

            <div class="col-md-10" id="s">
                <div>  @RenderBody()</div>


            </div>
        </div>
    </div>
    <script>


        $.ajax({
            url: 'https://localhost:44319/api/users'
            , type: 'get'
            //, data: JSON.stringify({  })
            , contentType: "application/json"
            , headers: { "Authorization": "Bearer " + $.cookie("token") }
            , success: function (res) {
                console.log(res);

                $("#RoleName").html(res.roleDtos[0].name);

                $("#NickName").html(res.nickName);
                $("#spanNickName").html(res.nickName);
            }//success
        }).fail(function () {
            layer.msg("身份验证已过期，请重新登录！", function () {
                location.href = "/User/Login";
            });

        });//ajax




    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script type="text/javascript" color="228,48,75" opacity='1' zIndex="-1" count="201" src="~/dist/canvas-nest.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
