
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>用户登录</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/css/style.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('/StaticResources/Img/greebg.jpg');
            text-align: center;
            color: aliceblue;
        }
    </style>
</head>
<body>


    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="card bg-dark text-white" style="margin-top:50px">
                    <div class="card-img-overlay">
                        <h5 class="card-title" style="font-size:28px">Welcome to visit </h5>
                        <p class="card-text" style="font-size:19px">Here, you can communicate with the author, learn together and share information.Looking forward to your joining us!</p>
                        <p class="card-text" style="font-size:19px">Click below to log in!Didn't you?Sign up for one!&nbsp; <a href="/User/Register" class="badge badge-primary">To Register</a></p>@*去往注册按钮*@
                        <p style="font-size:19px"> We'll never share your email and phone with anyone else  </p>
                        <p><button type="button" class="btn btn-warning" id="ShowLoginDiv">Login</button></p>@*显示登录框按钮*@
                    </div>
                </div>
                <div id="LoginDiv">
                    @*登录框*@
                    <form style="margin:340px auto;width:300px">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Account</label>
                            @*账号*@
                            <input type="text" class="form-control" style="background:rgba(0,0,0,0.4);border-width:2px" placeholder="Please enter your Account">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            @*密码框*@
                            <input type="password" class="form-control" style="background:rgba(0,0,0,0.4);border-width:2px" placeholder="Please enter your password">
                            <a href="#" class="badge badge-danger">Forgot password</a>

                        </div>

                        @*登录按钮*@
                        <button type="button" class="btn btn-warning" id="Login">Login</button>

                    </form>

                </div>


            </div>
        </div>
    </div>

    <script>
        $("#Login").click(function () {
            location.href = '/User/UserCenter';
        });
        //
        //登录框特效
        $("#LoginDiv").hide();
        $("#ShowLoginDiv").click(function () {
            $("#ShowLoginDiv").fadeOut(2000);
            $("#LoginDiv").fadeIn(3000);
        }); //登录框特效

    </script>
    <script type="text/javascript" color="184,255,245" opacity='1' zIndex="-1" count="498" src="~/dist/canvas-nest.js"></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
