
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Hello, world!</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        body {
            background-image: url('/StaticResources/Img/bg3.jpg');
            text-align: center;
            color: aliceblue;
        }
    </style>

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="card bg-dark text-white" style="margin-top:40px">
                    <div class="card-img-overlay">
                        <h5 class="card-title" style="font-size:28px">Looking forward to your joining us </h5>
                        <p class="card-text" style="font-size:19px">I will not register as our member through your mobile phone number, we will send you a message verification code.We don't share your phone number with anyone!</p>
                        <p class="card-text" style="font-size:18px">If you are ready, we will start to register!</p> 
                        
                        <p><button type="button" class="btn btn-info" id="ShowRegisterDiv">Register</button></p>@*显示注册框按钮*@
                    </div>
                </div>
                <div id="RegisterDiv">
                    @*注册框*@
                    <form style="margin:370px auto;width:300px">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Phone Number</label>
                            @*手机号*@
                            <input type="text" class="form-control" style="background:rgba(0,0,0,0.5);border-width:2px" placeholder="Please enter your Phone">
                        </div>
                        <div class="form-group form-inline">

                            @*手机验证码*@
                            <input type="password" class="form-control" style="background:rgba(0,0,0,0.5);border-width:2px;width:186px" placeholder=" Verification code">
                            <button type="button" class="btn btn-outline-danger">Get Code</button>

                        </div>
                        @*注册按钮*@
                        <button type="button" class="btn btn-info" id="Register">Register</button>

                    </form>

                </div>


            </div>
        </div>
    </div>


    <script>

        $("#Register").click(function () {
            location.href = '/User/Login';
        });

        //
        //注册框特效
        $("#RegisterDiv").hide();
        $("#ShowRegisterDiv").click(function () {
            $("#ShowRegisterDiv").fadeOut(2000);
            $("#RegisterDiv").fadeIn(3000);
        }); //注册框特效

    </script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script type="text/javascript" color="227,199,224" opacity='1' zIndex="-1" count="201" src="~/dist/canvas-nest.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>